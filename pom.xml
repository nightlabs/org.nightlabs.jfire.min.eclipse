	<properties>
		<assembly.directory>${project.build.directory}/assembly</assembly.directory>
		<assembly.plugins.directory>${assembly.directory}/eclipse/plugins</assembly.plugins.directory>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-platform</id>
						<phase>package</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${assembly.directory}</outputDirectory>
							<includeGroupIds>org.eclipse</includeGroupIds>
							<includeArtifactIds>org.eclipse.platform.linux-gtk-x86_64</includeArtifactIds>
							<!-- TODO excludes? 
							<excludes>**\/*icon.xmp,eclipse.ini,eclipse</excludes>
							-->
						</configuration>
					</execution>
					<execution>
						<id>copy-plugins</id>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${assembly.plugins.directory}</outputDirectory>
							<includeTypes>jar</includeTypes>
							<excludeTransitive>true</excludeTransitive>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<artifactItems>
						<artifactItem>
							<groupId>org.eclipse</groupId>
							<artifactId>org.eclipse.platform.linux-gtk-x86_64</artifactId>
							<excludes>icon.xpm,eclipse,eclipse.ini,readme/**/*</excludes>
						</artifactItem>
					</artifactItems>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.5</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<resources>
								<resource>
									<directory>src/main/resources</directory>
								</resource>
							</resources>
							<outputDirectory>${assembly.directory}</outputDirectory>
							<overwrite>true</overwrite>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
							<!-- org.nightlabs.jfire.base.j2ee.osgi needs to have an _ before version to be found by equinox-launcher  -->
								<move 
									file="${assembly.plugins.directory}/org.nightlabs.jfire.base.j2ee.osgi-${project.version}.jar" 
									tofile="${assembly.plugins.directory}/org.nightlabs.jfire.base.j2ee.osgi_${project.version}.jar"/>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>


