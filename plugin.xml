                icon="icons/usergroup/CreateUserGroupAction.16x16.png"
                id="org.nightlabs.jfire.base.admin.usergroup.CreateUserGroupAction#menu"
                label="%actions.createUserGroup.label"
                menubarPath="administrationMenu/entityGroup" tooltip="%actions.createUserGroup.tooltip"/>
