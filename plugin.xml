                id="org.nightlabs.jfire.base.admin.user.CreateUserAction"
                label="%actions.createUser.label" style="push"
                toolbarPath="additions" tooltip="%actions.createUser.tooltip"/>
        </viewContribution>
        <viewContribution
            id="org.nightlabs.jfire.base.admin.timer.TaskDetailView" targetID="org.nightlabs.jfire.base.admin.timer.TaskDetailView">
