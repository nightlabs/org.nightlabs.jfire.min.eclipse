<project>
	<target name="dist.plugin.jar.post">
<!--
	According to http://wiki.eclipse.org/index.php/Adaptor_Hooks and especially our own experiments,
	we MUST use a JAR - a directory does NOT work.
-->
		<delete file="${project.dir}/${dist.dir}/${project.fileName}_${project.version}.jar" failonerror="false" />
		<delete file="${project.dir}/${dist.dir}/${project.fileName}.jar" failonerror="false" />

		<zip zipfile="${project.dir}/${dist.dir}/${project.fileName}_${project.version}.jar">
			<fileset dir="${project.dir}" includes="${project.dir}/META-INF/MANIFEST.MF" />
			<fileset dir="${project.dir}/${dist.dir}/${project.name}_${project.version}" includes="**/*" excludes="org.nightlabs.jfire.base.j2ee.osgi.jar"/>
			<fileset dir="${project.dir}/${bin.dir}">
		        <include name="**/*.*"/>
		     </fileset>
	    </zip>

		<delete dir="${project.dir}/${dist.dir}/${project.name}_${project.version}" failonerror="false" />
	</target>
</project>