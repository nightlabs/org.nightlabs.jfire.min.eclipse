<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE nightlybuild PUBLIC "-//NightLabs//DTD NightlyBuild V 0.20//EN" "http://www.nightlabs.de/dtd/nightlybuild_0_20.dtd">

<nightlybuild>

  <project name="org.nightlabs.jfire.base.j2ee">
	<plugin/>
    <ant path="org.nightlabs.jfire.base.j2ee" file="build-nightlabs.xml" target="deploy"/>
	<requires/>

    <!-- For the build-nightlabs-compile.pre.xml to work, the following projects must be built before. -->
	<requires path="/JFireIntegrationJBoss"/>
	<requires path="/JFireRCLBackend"/>
	<requires path="/JFireRCLBackendBean"/>
	<requires path="/JFireRemoteClassLoader"/>
	<requires path="/org.nightlabs.rmissl"/>

    <provides/>
	<provides path="org.nightlabs.jfire.base.j2ee" location="org.nightlabs.jfire.base.j2ee/lib/JFireIntegrationJBoss.jar"/>
    <provides path="org.nightlabs.jfire.base.j2ee" location="org.nightlabs.jfire.base.j2ee/lib/JFireRemoteClassLoader.jar"/>
    <provides path="org.nightlabs.jfire.base.j2ee" location="org.nightlabs.jfire.base.j2ee/lib/JFireRCLBackend.jar"/>
    <provides path="org.nightlabs.jfire.base.j2ee" location="org.nightlabs.jfire.base.j2ee/lib/JFireRCLBackendBean.jar"/>
    <provides path="org.nightlabs.jfire.base.j2ee" location="org.nightlabs.jfire.base.j2ee/lib/JFireRCLBackendBean.jar"/>
	<provides path="org.nightlabs.jfire.base.j2ee" location="org.nightlabs.jfire.base.j2ee/lib/jbossall-client.jar"/>

    <javadoc path="org.nightlabs.jfire.base.j2ee/src"/>

	<!--
		"javax.jdo" is an optional dependency which is neither required at build time nor at runtime.
		Read the README.txt in project "org.nightlabs.jfire.jdo.rcp" to understand more about this.
		Marco.
	-->
    <ignore-requires path="javax.jdo"/>
  </project>

</nightlybuild>
